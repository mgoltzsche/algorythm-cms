<bundle xmlns="http://cms.algorythm.de/common/Bundle"
		name="example.org"
		title="My example site"
		default-locale="en-GB"
		context-path="/site1">
	<locale locale="de-DE" />
	<param id="testparam" value="overwritten" />
	<dependency name="common.cms.algorythm.de" />
	<page content="/contents/welcome.xml">
		<page name="mystuff" content="/contents/mystuff.xml">
			<page name="info" content="/contents/info.xml" />
		</page>
		<page name="about" content="/contents/about.xml" />
	</page>
	<output id="html">
		<job type="de.algorythm.cms.common.rendering.pipeline.job.ScssCompiler" phase="TRANSFORM"/>
	</output>
</bundle>